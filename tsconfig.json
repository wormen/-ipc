{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "removeComments": true,
    "lib": [
      "es5",
      "es2016",
      "es2018"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}